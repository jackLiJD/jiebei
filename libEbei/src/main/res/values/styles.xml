<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>


    <!-- style for auto ratio ImageView -->
    <declare-styleable name="AutoRatioImageView">

        <!-- -ratio 高/宽 -->
        <attr name="ratio" format="float" />
        <attr name="prefer" format="integer" />
    </declare-styleable>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>-->

    <!-- 自定义dialog的样式 -->
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- TabLayout的样式 -->
    <!--<style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/fw_app_color_principal</item>
        <item name="tabSelectedTextColor">@color/fw_app_color_principal</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>-->

    <!-- TabLayout的字体颜色 -->
    <!--<style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/fw_text_black</item>
    </style>-->

    <!-- 横线样式 -->
    <style name="hLineStyle">
        <item name="android:background">@color/fw_default_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyleE4">
        <item name="android:background">@color/color_e4e4e4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyleDE">
        <item name="android:background">@color/color_dedede</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyleED">
        <item name="android:background">@color/color_ededed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式(新) -->
    <style name="hNewLineStyle">
        <item name="android:background">@color/fw_default_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.75dp</item>
    </style>
    <!-- 横线样式 -->
    <style name="hMarginLineStyle">
        <item name="android:background">@color/fw_default_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>
    <!-- 竖线样式 -->
    <style name="vLineStyle">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/fw_default_divider_color</item>
    </style>

    <!-- View之间的间隔样式 -->
    <style name="hDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x24</item>
        <item name="android:background">@color/fw_colorGrey</item>
    </style>

    <style name="WhiteSelectorLayoutThemeLine" parent="@style/WhiteLayoutTheme">
        <item name="android:background">@drawable/item_selector_line</item>
    </style>

    <style name="WhiteLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:paddingRight">@dimen/x20</item>
    </style>
    <!-- 升级progressBar样式 -->
    <style name="core_progress_bar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">@dimen/x20</item>
        <item name="android:minHeight">@dimen/x15</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/fw__shape_progress_bar</item>
    </style>

    <!-- tips提示框 -->
    <style name="tipsDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <!--<item name="android:windowIsFloating">true</item>&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/lightgray</item>
    </style>

    <!--认证重复提示框 -->
    <style name="creditPromoteDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <!--<item name="android:windowIsFloating">true</item>&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>


    <!-- CustomCheckBox theme -->
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/find_pwd_checkbox</item>
    </style>

    <style name="verify_textview_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_txt_33</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomValidateDialog" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Animation.BottomSelect" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>

    </style>
</resources>
