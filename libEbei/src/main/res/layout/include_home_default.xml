<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_home_main_default">

    <LinearLayout
        android:id="@+id/rl_home_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layerlist_bg_home_main"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/homepage_amount_icon"
            android:drawablePadding="5dp"
            android:text="最高可申请(元)"
            android:textColor="@color/color_txt_home_tip_default" />

        <TextView
            android:id="@+id/tv_price_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_home_tip_default"
            android:textSize="64sp"
            android:textStyle="bold"
            tools:text="50000" />

        <TextView
            android:id="@+id/tv_term_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款期限 1-12个月"
            android:textColor="@color/color_txt_home_tip"
            android:textSize="14sp" />

        <com.ald.ebei.ui.EbeiNoDoubleClickButton
            android:id="@+id/btn_apply_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="53dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/bg_next_button"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                android:id="@+id/tv_tip_one_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/icon_homepage_checkmark"
                android:drawablePadding="2dp"
                android:text="无抵押 无担保"
                android:textColor="@color/color_txt_home_checkmark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tip_two_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/icon_homepage_checkmark"
                android:drawablePadding="2dp"
                android:text="系统审核 快速放款"
                android:textColor="@color/color_txt_home_checkmark"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>