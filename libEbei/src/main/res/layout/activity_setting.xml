<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.ald.ebei.activity.SettingActivityEbei">

    <include layout="@layout/layout_head" />


    <com.ald.ebei.ui.EbeiNoDoubleClickButton
        android:id="@+id/btn_set_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:drawableEnd="@mipmap/ic_arrow_right"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="设置登录密码"
        android:textColor="#FF3F3F40"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="18dp"
            android:background="#F1F1F1" />
    </LinearLayout>


    <com.ald.ebei.ui.EbeiNoDoubleClickButton
        android:id="@+id/btn_about_us"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:drawableEnd="@mipmap/ic_arrow_right"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="关于我们"
        android:textColor="#FF3F3F40"
        android:textSize="15sp" />

    <com.ald.ebei.ui.EbeiNoDoubleClickButton
        android:id="@+id/btn_login_out"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:text="退出登录"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
