<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ic_pwd_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x116"
        android:layout_marginRight="@dimen/x106">

        <TextView
            android:id="@+id/ic_pwd_password_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/pwd_login_pwd"
            android:textColor="#666"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/ic_pwd_eye"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/y52"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/x10"
            android:src="@drawable/ic_close_eyes" />

        <EditText
            android:id="@+id/ic_pwd_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@id/ic_pwd_eye"
            android:layout_toRightOf="@id/ic_pwd_password_tag"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/pwd_login_input"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <View
        android:id="@+id/ic_login_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_below="@id/ic_pwd_rl"
        android:layout_marginLeft="@dimen/x116"
        android:layout_marginRight="@dimen/x116"
        android:layout_marginTop="@dimen/y10"
        android:background="#cbcbcb" />
</RelativeLayout>