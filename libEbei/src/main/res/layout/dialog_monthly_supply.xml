<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/icon_homepage_toast_signout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_permission_image"
        android:orientation="vertical"
        android:padding="@dimen/y30">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/icon_homepage_toast_monthlysupply"
            android:drawablePadding="2dp"
            android:gravity="center|left"
            android:padding="@dimen/x24"
            android:paddingLeft="20dp"
            android:text="月供详情"
            android:textColor="@color/color_colorPrimary"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_bg_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/iv_monthly_supply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="20dp" />
    </LinearLayout>
</LinearLayout>